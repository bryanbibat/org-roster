<% form_for [@committee, @role] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :committee %><br />
    <%=h @committee.code %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :execom, "Part of Executive Committee?" %><br />
    <%= f.check_box :execom %>
  </p>
  <p>
    <%= f.submit button_label %>
  </p>
<% end %>

