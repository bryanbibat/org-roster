<%= render :partial => "populate_script" %>

<h1>Editing position</h1>

<% form_for [@user, @position] do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :user %><br />
    <%= f.text_field :user %>
  </p>
  <p>
    <%= f.label :committee %><br />
    <%= f.text_field :committee %>
  </p>
  <p>
    <%= f.label :role %><br />
    <%= f.text_field :role %>
  </p>
  <p>
    <%= f.label :year %><br />
    <%= select_academic_year :year, 2000, 2010 %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', @user %>
