<% title "Edit User Credentials" %>

<% form_for(:user, @user, :url => update_credentials_user_path(@user), :html => {:method => :put }) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Repeat Password" %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <% if current_user.admin? %>
  <p>
    <%= f.label :role %><br />
    <%= select(:user, :role, roles) %>
  </p>
  <% end %>  
  <p><%= f.submit "Submit" %></p>
<% end %>

<p>
  <%= link_to "Cancel", @user %>
</p>


