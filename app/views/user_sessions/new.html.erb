<% title "Login" %>

<% form_for @user_session, :url => login_path do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p><%= f.submit "Log in" %></p>
  <p><%= link_to "Forgot your password?", new_password_reset_path %>
<% end %>


